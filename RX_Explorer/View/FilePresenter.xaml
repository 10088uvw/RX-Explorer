<Page x:Class="RX_Explorer.FilePresenter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      xmlns:Cls="using:RX_Explorer.Class"
      xmlns:System="using:System"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:Behaviors="using:Microsoft.Toolkit.Uwp.UI.Behaviors"
      xmlns:Custom="using:RX_Explorer.CustomControl"
      mc:Ignorable="d"
      NavigationCacheMode="Required"
      Background="Transparent">

    <Page.Resources>
        <muxc:TeachingTip x:Name="InvalidCharTip"
                          IsLightDismissEnabled="True"
                          x:Uid="PresentInvalidCharTip"
                          Title="错误"
                          Subtitle="不能包含非法字符&#x000A;非法字符包括 \ / : * ? &quot; &lt; &gt; |" />

        <muxc:TeachingTip x:Name="InvalidNameTip"
                          IsLightDismissEnabled="True"
                          x:Uid="PresentInvalidNameTip"
                          Title="错误"
                          Subtitle="名称不能为空且不能包含无效的名称" />

        <Cls:EmptyTextFiliterConverter x:Key="EmptyTextFiliter" />
        <Cls:InverseBooleanConverter x:Key="InverseConverter" />

        <muxc:CommandBarFlyout x:Name="LinkItemFlyout"
                               Placement="RightEdgeAlignedTop">
            <AppBarElementContainer x:Name="LinkStandardBar">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton Icon="Copy"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Copy')}"
                                  Click="Copy_Click" />
                    <AppBarButton Icon="Cut"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Cut')}"
                                  Click="Cut_Click" />
                    <AppBarButton Icon="Delete"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Delete')}"
                                  Click="Delete_Click" />
                    <AppBarButton Icon="Rename"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Rename')}"
                                  Click="Rename_Click" />
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorTag_Tapped"
                            x:Uid="TagEntry"
                            PointerEntered="ColorTag_PointerEntered">
                        <Viewbox>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB52;" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <AppBarElementContainer Visibility="{x:Bind LinkStandardBar.Visibility, Mode=TwoWay, Converter={StaticResource InverseConverter}}">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton ToolTipService.ToolTip="Untag"
                                  x:Uid="UnTag"
                                  Click="UnTag_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEA92;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Orange"
                                  x:Uid="OrangeTag"
                                  ToolTipService.ToolTip="Orange"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="GreenYellow"
                                  x:Uid="GreenTag"
                                  ToolTipService.ToolTip="Green"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Yellow"
                                  x:Uid="YellowTag"
                                  ToolTipService.ToolTip="Yellow"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#409EFE"
                                  x:Uid="BlueTag"
                                  ToolTipService.ToolTip="Blue"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorBarBack_Tapped"
                            PointerEntered="ColorBarBack_PointerEntered">
                        <Viewbox>
                            <SymbolIcon Symbol="Back" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton Icon="OpenFile"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Open')}"
                              MinWidth="250"
                              Click="ItemOpen_Click">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control"
                                             Key="G"
                                             IsEnabled="False" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton Label="打开文件所在位置"
                              x:Uid="LnkOpenLocation"
                              MinWidth="250"
                              x:Name="LnkOpenLocation"
                              Click="LnkOpenLocation_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets"
                                  Glyph="&#xF133;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Tag"
                              MinWidth="250"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Property')}"
                              Click="FileProperty_Click" />
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>

        <muxc:CommandBarFlyout x:Name="FileFlyout"
                               Closed="CommandBarFlyout_Closed"
                               Placement="RightEdgeAlignedTop">
            <AppBarElementContainer x:Name="FileStandardBar">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton Icon="Copy"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Copy')}"
                                  Name="Copy"
                                  Click="Copy_Click" />
                    <AppBarButton Icon="Cut"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Cut')}"
                                  Click="Cut_Click"
                                  Name="Cut" />
                    <AppBarButton Icon="Delete"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Delete')}"
                                  x:Name="DeleteButton"
                                  Click="Delete_Click" />
                    <AppBarButton Icon="Rename"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Rename')}"
                                  x:Name="FileRename"
                                  Click="Rename_Click" />
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorTag_Tapped"
                            x:Uid="TagEntry"
                            PointerEntered="ColorTag_PointerEntered">
                        <Viewbox>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB52;" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <AppBarElementContainer Visibility="{x:Bind FileStandardBar.Visibility, Mode=TwoWay, Converter={StaticResource InverseConverter}}">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton ToolTipService.ToolTip="Untag"
                                  x:Uid="UnTag"
                                  Click="UnTag_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEA92;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Orange"
                                  x:Uid="OrangeTag"
                                  ToolTipService.ToolTip="Orange"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="GreenYellow"
                                  x:Uid="GreenTag"
                                  ToolTipService.ToolTip="Green"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Yellow"
                                  x:Uid="YellowTag"
                                  ToolTipService.ToolTip="Yellow"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#409EFE"
                                  x:Uid="BlueTag"
                                  ToolTipService.ToolTip="Blue"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorBarBack_Tapped"
                            PointerEntered="ColorBarBack_PointerEntered">
                        <Viewbox>
                            <SymbolIcon Symbol="Back" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton Icon="OpenFile"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Open')}"
                              MinWidth="250"
                              x:Name="FileOpen"
                              Click="ItemOpen_Click">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control"
                                             Key="G"
                                             IsEnabled="False" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton Label="{x:Bind Cls:Globalization.GetString('Operate_Text_OpenWith')}"
                              Name="OtherOpenMethod"
                              MinWidth="250"
                              Icon="OpenWith">
                    <AppBarButton.Flyout>
                        <MenuFlyout x:Name="FileOpenMethodFlyout">
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_OpenAsAdministrator')}"
                                            MinWidth="160"
                                            Name="RunWithSystemAuthority"
                                            Click="RunWithSystemAuthority_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="Segoe MDL2 Assets"
                                              Glyph="&#xEA0D;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_ChooseAnotherApp')}"
                                            MinWidth="160"
                                            Icon="SwitchApps"
                                            Name="ChooseOtherApp"
                                            Click="ChooseOtherApp_Click" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Edit"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Edit')}"
                              MinWidth="250"
                              x:Name="FileEdit">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_Montage')}"
                                            MinWidth="160"
                                            x:Name="VideoEdit"
                                            Click="VideoEdit_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE177;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_Merge')}"
                                            Name="VideoMerge"
                                            Click="VideoMerge_Click"
                                            MinWidth="160">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE11E;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_Transcode')}"
                                            Name="Transcode"
                                            MinWidth="160"
                                            IsEnabled="False"
                                            Click="Transcode_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE1CA;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Icon="Share"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Share')}"
                              MinWidth="250"
                              Name="FileShare">
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="Right">
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_SystemShare')}"
                                            MinWidth="160"
                                            Name="SystemShare"
                                            Click="SystemShare_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF3E2;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_WIFIShare')}"
                                            MinWidth="160"
                                            Name="WIFIShare"
                                            Click="WIFIShare_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE701;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_BluetoothShare')}"
                                            MinWidth="160"
                                            Click="BluetoothShare_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE702;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton x:Name="Compression"
                              MinWidth="250"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Compression')}"
                              Click="Compression_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xE7B8;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:Name="Decompression"
                              MinWidth="250"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Decompression')}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xF133;" />
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout x:Name="DecompressionOptionFlyout"
                                    Opening="DecompressionOptionFlyout_Opening">
                            <Custom:MenuFlyoutItemWithImage Text="解压选项..."
                                                            Name="DecompressOption"
                                                            x:Uid="DecompressOption"
                                                            MinWidth="150"
                                                            MaxWidth="300"
                                                            Click="DecompressOption_Click">
                                <Custom:MenuFlyoutItemWithImage.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </Custom:MenuFlyoutItemWithImage.Icon>
                            </Custom:MenuFlyoutItemWithImage>
                            <Custom:MenuFlyoutItemWithImage Text="解压到此文件夹"
                                                            Click="Decompression_Click"
                                                            x:Uid="DecompressHere"
                                                            MinWidth="150"
                                                            MaxWidth="300">
                                <Custom:MenuFlyoutItemWithImage.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </Custom:MenuFlyoutItemWithImage.Icon>
                            </Custom:MenuFlyoutItemWithImage>
                            <Custom:MenuFlyoutItemWithImage Click="Decompression_Click"
                                                            x:Name="DecompressionOption2"
                                                            MinWidth="150"
                                                            MaxWidth="300">
                                <Custom:MenuFlyoutItemWithImage.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </Custom:MenuFlyoutItemWithImage.Icon>
                            </Custom:MenuFlyoutItemWithImage>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Tag"
                              MinWidth="250"
                              Name="Attribute"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Property')}"
                              Click="FileProperty_Click" />
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>

        <muxc:CommandBarFlyout x:Name="MixedFlyout"
                               Closed="CommandBarFlyout_Closed"
                               Placement="RightEdgeAlignedTop">
            <AppBarElementContainer x:Name="MixedStandardBar">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton Icon="Copy"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Copy')}"
                                  Click="Copy_Click" />
                    <AppBarButton Icon="Cut"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Cut')}"
                                  Click="Cut_Click" />
                    <AppBarButton Icon="Delete"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Delete')}"
                                  Click="Delete_Click" />
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            x:Uid="TagEntry"
                            Tapped="ColorTag_Tapped"
                            PointerEntered="ColorTag_PointerEntered">
                        <Viewbox>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB52;" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <AppBarElementContainer Visibility="{x:Bind MixedStandardBar.Visibility, Mode=TwoWay, Converter={StaticResource InverseConverter}}">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton ToolTipService.ToolTip="Untag"
                                  x:Uid="UnTag"
                                  Click="MixUnTag_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEA92;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Orange"
                                  x:Uid="OrangeTag"
                                  ToolTipService.ToolTip="Orange"
                                  Click="MixColor_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="GreenYellow"
                                  x:Uid="GreenTag"
                                  ToolTipService.ToolTip="Green"
                                  Click="MixColor_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Yellow"
                                  x:Uid="YellowTag"
                                  ToolTipService.ToolTip="Yellow"
                                  Click="MixColor_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#409EFE"
                                  x:Uid="BlueTag"
                                  ToolTipService.ToolTip="Blue"
                                  Click="MixColor_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorBarBack_Tapped"
                            PointerEntered="ColorBarBack_PointerEntered">
                        <Viewbox>
                            <SymbolIcon Symbol="Back" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton x:Name="MixCompression"
                              MinWidth="250"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Compression')}"
                              Click="MixCompression_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xE7B8;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:Name="MixDecompression"
                              MinWidth="250"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Decompression')}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xF133;" />
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout x:Name="MixDecompressionOptionFlyout" >
                            <Custom:MenuFlyoutItemWithImage Text="解压选项..."
                                                            Name="MixDecompressOption"
                                                            x:Uid="DecompressOption"
                                                            MinWidth="150"
                                                            MaxWidth="300"
                                                            Click="MixDecompressOption_Click">
                                <Custom:MenuFlyoutItemWithImage.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </Custom:MenuFlyoutItemWithImage.Icon>
                            </Custom:MenuFlyoutItemWithImage>
                            <Custom:MenuFlyoutItemWithImage Text="解压到此文件夹"
                                                            Click="MixDecompression_Click"
                                                            x:Uid="DecompressHere"
                                                            MinWidth="150"
                                                            MaxWidth="300">
                                <Custom:MenuFlyoutItemWithImage.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </Custom:MenuFlyoutItemWithImage.Icon>
                            </Custom:MenuFlyoutItemWithImage>
                            <Custom:MenuFlyoutItemWithImage Text="解压到各自的文件夹"
                                                            Click="MixDecompression_Click"
                                                            x:Name="MixDecompressIndie"
                                                            MinWidth="150"
                                                            MaxWidth="300">
                                <Custom:MenuFlyoutItemWithImage.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </Custom:MenuFlyoutItemWithImage.Icon>
                            </Custom:MenuFlyoutItemWithImage>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>

        <muxc:CommandBarFlyout x:Name="FolderFlyout"
                               Placement="RightEdgeAlignedTop"
                               Closed="CommandBarFlyout_Closed">
            <AppBarElementContainer x:Name="FolderStandardBar">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton Icon="Copy"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Copy')}"
                                  Click="Copy_Click" />
                    <AppBarButton Icon="Cut"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Cut')}"
                                  Click="Cut_Click" />
                    <AppBarButton Icon="Delete"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Delete')}"
                                  Click="Delete_Click" />
                    <AppBarButton Icon="Rename"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Rename')}"
                                  x:Name="FolderRename"
                                  Click="Rename_Click" />
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorTag_Tapped"
                            x:Uid="TagEntry"
                            PointerEntered="ColorTag_PointerEntered">
                        <Viewbox>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB52;" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <AppBarElementContainer Visibility="{x:Bind FolderStandardBar.Visibility, Mode=TwoWay, Converter={StaticResource InverseConverter}}">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton ToolTipService.ToolTip="Untag"
                                  x:Uid="UnTag"
                                  Click="UnTag_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEA92;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Orange"
                                  x:Uid="OrangeTag"
                                  ToolTipService.ToolTip="Orange"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="GreenYellow"
                                  x:Uid="GreenTag"
                                  ToolTipService.ToolTip="Green"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Yellow"
                                  x:Uid="YellowTag"
                                  ToolTipService.ToolTip="Yellow"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#409EFE"
                                  x:Uid="BlueTag"
                                  ToolTipService.ToolTip="Blue"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
