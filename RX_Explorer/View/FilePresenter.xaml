<Page x:Class="RX_Explorer.FilePresenter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
      xmlns:Cls="using:RX_Explorer.Class"
      xmlns:System="using:System"
      xmlns:local="using:RX_Explorer"
      xmlns:Data="using:Windows.UI.Xaml.Data"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:Windows11Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,11)"
      xmlns:Windows11NotPresent="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract,11)"
      mc:Ignorable="d"
      Background="Transparent">

    <Page.Resources>
        <Cls:AnimationStyleSelector x:Key="AnimationStyleSelector"/>
        
        <CollectionViewSource x:Name="CollectionVS"
                              IsSourceGrouped="False" />

        <muxc:TeachingTip x:Name="InvalidCharTip"
                          IsLightDismissEnabled="True"
                          x:Uid="PresentInvalidCharTip"
                          Title="错误"
                          Subtitle="不能包含非法字符&#x000A;非法字符包括 \ / : * ? &quot; &lt; &gt; |" />

        <muxc:TeachingTip x:Name="InvalidNameTip"
                          IsLightDismissEnabled="True"
                          x:Uid="PresentInvalidNameTip"
                          Title="错误"
                          Subtitle="名称不能为空且不能包含无效的名称" />

        <Flyout x:Name="TooltipFlyout"
                ShouldConstrainToRootBounds="False">
            <Flyout.FlyoutPresenterStyle>
                <Style TargetType="FlyoutPresenter">
                    <Setter Property="Background"
                            Value="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}" />
                    <Setter Property="Padding"
                            Value="5" />
                    <Setter Property="CornerRadius"
                            Value="{StaticResource CustomCornerRadius}" />
                    <Setter Property="MinHeight"
                            Value="0" />
                </Style>
            </Flyout.FlyoutPresenterStyle>
            <StackPanel>
                <TextBlock x:Name="TooltipFlyoutText" 
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="Wrap"
                           IsTextSelectionEnabled="True"
                           MaxWidth="400"/>
            </StackPanel>
        </Flyout>

        <Cls:EmptyTextFiliterConverter x:Key="EmptyTextFiliter" />
        <Cls:InverseConverter x:Key="InverseConverter" />
        <Cls:SyncStatusIconConverter x:Key="SyncStatusIconConverter" />
        <Cls:SyncStatusColorConverter x:Key="SyncStatusColorConverter" />
        <Cls:SyncStatusVisibilityConverter x:Key="SyncStatusVisibilityConverter" />
        <Cls:SyncStatusToolTipConverter x:Key="SyncStatusToolTipConverter" />

        <muxc:CommandBarFlyout x:Name="LinkItemFlyout"
                               AlwaysExpanded="True"
                               Placement="RightEdgeAlignedTop"
                               Closing="CommandBarFlyout_Closing">
            <AppBarElementContainer x:Name="LinkStandardBar">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton Icon="Copy"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Copy')}"
                                  Click="Copy_Click" />
                    <AppBarButton Icon="Cut"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Cut')}"
                                  Click="Cut_Click" />
                    <AppBarButton Icon="Delete"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Delete')}"
                                  Click="Delete_Click" />
                    <AppBarButton Icon="Rename"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Rename')}"
                                  Click="Rename_Click" />
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorTag_Tapped"
                            x:Uid="TagEntry">
                        <Viewbox>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB52;" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <AppBarElementContainer Visibility="{x:Bind LinkStandardBar.Visibility, Mode=TwoWay, Converter={StaticResource InverseConverter}}">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton ToolTipService.ToolTip="Untag"
                                  x:Uid="UnTag"
                                  Click="UnTag_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEA92;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Orange"
                                  x:Uid="OrangeTag"
                                  ToolTipService.ToolTip="Orange"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#22B324"
                                  x:Uid="GreenTag"
                                  ToolTipService.ToolTip="Green"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#CC6EFF"
                                  x:Uid="PurpleTag"
                                  ToolTipService.ToolTip="Yellow"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#42C5FF"
                                  x:Uid="BlueTag"
                                  ToolTipService.ToolTip="Blue"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorBarBack_Tapped">
                        <Viewbox>
                            <SymbolIcon Symbol="Back" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton Icon="OpenFile"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Open')}"
                              Width="300"
                              Click="ItemOpen_Click">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control"
                                             Key="G"
                                             IsEnabled="False" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton Label="打开文件所在位置"
                              x:Uid="LnkOpenLocation"
                              Width="300"
                              x:Name="LnkOpenLocation"
                              Click="LnkOpenLocation_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xF133;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Tag"
                              Width="300"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Property')}"
                              Click="FileProperty_Click" />
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>

        <muxc:CommandBarFlyout x:Name="FileFlyout"
                               AlwaysExpanded="True"
                               Placement="RightEdgeAlignedTop"
                               Opening="FileFlyout_Opening"
                               Closed="CommandBarFlyout_Closed"
                               Closing="CommandBarFlyout_Closing">
            <AppBarElementContainer x:Name="FileStandardBar">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton Icon="Copy"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Copy')}"
                                  Name="Copy"
                                  Click="Copy_Click" />
                    <AppBarButton Icon="Cut"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Cut')}"
                                  Click="Cut_Click"
                                  Name="Cut" />
                    <AppBarButton Icon="Delete"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Delete')}"
                                  x:Name="DeleteButton"
                                  Click="Delete_Click" />
                    <AppBarButton Icon="Rename"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Rename')}"
                                  x:Name="FileRename"
                                  Click="Rename_Click" />
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorTag_Tapped"
                            x:Uid="TagEntry">
                        <Viewbox>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB52;" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <AppBarElementContainer Visibility="{x:Bind FileStandardBar.Visibility, Mode=TwoWay, Converter={StaticResource InverseConverter}}">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton ToolTipService.ToolTip="Untag"
                                  x:Uid="UnTag"
                                  Click="UnTag_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEA92;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Orange"
                                  x:Uid="OrangeTag"
                                  ToolTipService.ToolTip="Orange"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#22B324"
                                  x:Uid="GreenTag"
                                  ToolTipService.ToolTip="Green"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#CC6EFF"
                                  x:Uid="PurpleTag"
                                  ToolTipService.ToolTip="Purple"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#42C5FF"
                                  x:Uid="BlueTag"
                                  ToolTipService.ToolTip="Blue"
                                  Click="Color_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorBarBack_Tapped">
                        <Viewbox>
                            <SymbolIcon Symbol="Back" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton Icon="OpenFile"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Open')}"
                              Width="300"
                              x:Name="FileOpen"
                              Click="ItemOpen_Click">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control"
                                             Key="G"
                                             IsEnabled="False" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton Label="{x:Bind Cls:Globalization.GetString('Operate_Text_OpenWith')}"
                              Name="OtherOpenMethod"
                              Width="300"
                              Icon="OpenWith">
                    <AppBarButton.Flyout>
                        <MenuFlyout x:Name="FileOpenMethodFlyout">
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_OpenAsAdministrator')}"
                                            MinWidth="160"
                                            Name="RunWithSystemAuthority"
                                            Click="RunWithSystemAuthority_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xEA0D;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_ChooseAnotherApp')}"
                                            MinWidth="160"
                                            Icon="SwitchApps"
                                            Name="ChooseOtherApp"
                                            Click="ChooseOtherApp_Click" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Edit"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Edit')}"
                              Width="300"
                              x:Name="FileEdit">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_Montage')}"
                                            MinWidth="160"
                                            x:Name="VideoEdit"
                                            Click="VideoEdit_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE177;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_Merge')}"
                                            Name="VideoMerge"
                                            Click="VideoMerge_Click"
                                            MinWidth="160">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE11E;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_Transcode')}"
                                            Name="Transcode"
                                            MinWidth="160"
                                            IsEnabled="False"
                                            Click="Transcode_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE1CA;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Icon="Share"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Share')}"
                              Width="300"
                              Name="FileShare">
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="Right">
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_WIFIShare')}"
                                            MinWidth="160"
                                            Name="WIFIShare"
                                            Click="WIFIShare_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE701;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_BluetoothShare')}"
                                            MinWidth="160"
                                            Click="BluetoothShare_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE702;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="{x:Bind Cls:Globalization.GetString('Operate_Text_SystemShare')}"
                                            MinWidth="160"
                                            Name="SystemShare"
                                            Click="SystemShare_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF3E2;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Label="Send to"
                              x:Uid="SendTo"
                              Width="300"
                              Icon="Send">
                    <AppBarButton.Flyout>
                        <MenuFlyout Opening="SendToFlyout_Opening" />
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton x:Name="Compression"
                              Width="300"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Compression')}"
                              Click="Compression_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xE7B8;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:Name="Decompression"
                              Width="300"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Decompression')}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xF133;" />
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout x:Name="DecompressionOptionFlyout"
                                    Opening="DecompressionOptionFlyout_Opening">
                            <MenuFlyoutItem Text="解压选项..."
                                            Name="DecompressOption"
                                            x:Uid="DecompressOption"
                                            MinWidth="150"
                                            MaxWidth="300"
                                            Click="DecompressOption_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="解压到此文件夹"
                                            Click="Decompression_Click"
                                            x:Uid="DecompressHere"
                                            MinWidth="150"
                                            MaxWidth="300">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Click="Decompression_Click"
                                            x:Name="DecompressionOption2"
                                            MinWidth="150"
                                            MaxWidth="300">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarSeparator />
                <AppBarButton Icon="Tag"
                              Width="300"
                              Name="Attribute"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Property')}"
                              Click="FileProperty_Click" />
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>

        <muxc:CommandBarFlyout x:Name="MixedFlyout"
                               AlwaysExpanded="True"
                               Placement="RightEdgeAlignedTop"
                               Opening="MixedFlyout_Opening"
                               Closed="CommandBarFlyout_Closed"
                               Closing="CommandBarFlyout_Closing">
            <AppBarElementContainer x:Name="MixedStandardBar">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton Icon="Copy"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Copy')}"
                                  Click="Copy_Click" />
                    <AppBarButton Icon="Cut"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Cut')}"
                                  Click="Cut_Click" />
                    <AppBarButton Icon="Delete"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Delete')}"
                                  Click="Delete_Click" />
                    <AppBarButton Icon="Rename"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Rename')}"
                                  Click="Rename_Click" />
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            x:Uid="TagEntry"
                            Tapped="ColorTag_Tapped">
                        <Viewbox>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB52;" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <AppBarElementContainer Visibility="{x:Bind MixedStandardBar.Visibility, Mode=TwoWay, Converter={StaticResource InverseConverter}}">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton ToolTipService.ToolTip="Untag"
                                  x:Uid="UnTag"
                                  Click="MixUnTag_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEA92;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="Orange"
                                  x:Uid="OrangeTag"
                                  ToolTipService.ToolTip="Orange"
                                  Click="MixColor_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#22B324"
                                  x:Uid="GreenTag"
                                  ToolTipService.ToolTip="Green"
                                  Click="MixColor_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#CC6EFF"
                                  x:Uid="PurpleTag"
                                  ToolTipService.ToolTip="Purple"
                                  Click="MixColor_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Foreground="#42C5FF"
                                  x:Uid="BlueTag"
                                  ToolTipService.ToolTip="Blue"
                                  Click="MixColor_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB51;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorBarBack_Tapped">
                        <Viewbox>
                            <SymbolIcon Symbol="Back" />
                        </Viewbox>
                    </Border>
                </StackPanel>
            </AppBarElementContainer>
            <muxc:CommandBarFlyout.SecondaryCommands>
                <AppBarButton Icon="OpenFile"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Open')}"
                              Width="300"
                              Name="MixOpen"
                              Click="MixOpen_Click" />
                <AppBarSeparator />
                <AppBarButton x:Name="MixCompression"
                              Width="300"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Compression')}"
                              Click="MixCompression_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xE7B8;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:Name="MixDecompression"
                              Width="300"
                              Label="{x:Bind Cls:Globalization.GetString('Operate_Text_Decompression')}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                  Glyph="&#xF133;" />
                    </AppBarButton.Icon>
                    <AppBarButton.Flyout>
                        <MenuFlyout x:Name="MixDecompressionOptionFlyout">
                            <MenuFlyoutItem Text="解压选项..."
                                                            Name="MixDecompressOption"
                                                            x:Uid="DecompressOption"
                                                            MinWidth="150"
                                                            MaxWidth="300"
                                                            Click="MixDecompressOption_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="解压到此文件夹"
                                                            Click="MixDecompression_Click"
                                                            x:Uid="DecompressHere"
                                                            MinWidth="150"
                                                            MaxWidth="300">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="解压到各自的文件夹"
                                                            Click="MixDecompression_Click"
                                                            x:Name="MixDecompressIndie"
                                                            MinWidth="150"
                                                            MaxWidth="300">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF0B2;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </muxc:CommandBarFlyout.SecondaryCommands>
        </muxc:CommandBarFlyout>

        <muxc:CommandBarFlyout x:Name="FolderFlyout"
                               AlwaysExpanded="True"
                               Placement="RightEdgeAlignedTop"
                               Closing="CommandBarFlyout_Closing"
                               Closed="CommandBarFlyout_Closed">
            <AppBarElementContainer x:Name="FolderStandardBar">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton Icon="Copy"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Copy')}"
                                  Click="Copy_Click" />
                    <AppBarButton Icon="Cut"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Cut')}"
                                  Click="Cut_Click" />
                    <AppBarButton Icon="Delete"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Delete')}"
                                  Click="Delete_Click" />
                    <AppBarButton Icon="Rename"
                                  ToolTipService.ToolTip="{x:Bind Cls:Globalization.GetString('Operate_Text_Rename')}"
                                  x:Name="FolderRename"
                                  Click="Rename_Click" />
                    <Border Background="Transparent"
                            Padding="12"
                            IsTapEnabled="True"
                            Tapped="ColorTag_Tapped"
                            x:Uid="TagEntry">
                        <Viewbox>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEB52;" />
