<Page x:Class="RX_Explorer.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:RX_Explorer.Class"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:controls1="using:Microsoft.UI.Xaml.Controls"
      mc:Ignorable="d"
      NavigationCacheMode="Required"
      Background="Transparent">

    <Page.Resources>
        <local:SizeDisplayConverter x:Key="StateConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="10,10,0,0"
                   Text="搜索结果"
                   x:Uid="SearchResult"
                   FontSize="22" />
        <ListView Margin="10"
                  Grid.Row="1"
                  Name="SearchResultList"
                  x:FieldModifier="public"
                  Grid.RowSpan="2"
                  IsHoldingEnabled="True"
                  Holding="SearchResultList_Holding"
                  RightTapped="SearchResultList_RightTapped"
                  SelectionChanged="SearchResultList_SelectionChanged">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid Height="25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="名称"
                                   x:Uid="SearchName"
                                   Margin="13,0,0,0"
                                   FontSize="14"
                                   TextTrimming="CharacterEllipsis"
                                   Grid.Column="0" />
                        <TextBlock Text="修改日期"
                                   x:Uid="SearchModified"
                                   FontSize="14"
                                   Margin="4,0,0,0"
                                   TextTrimming="CharacterEllipsis"
                                   Grid.Column="1" />
                        <TextBlock Text="类型"
                                   x:Uid="SearchType"
                                   FontSize="14"
                                   TextTrimming="CharacterEllipsis"
                                   Grid.Column="2" />
                        <TextBlock Text="大小"
                                   x:Uid="SearchSize"
                                   FontSize="14"
                                   TextTrimming="CharacterEllipsis"
                                   Grid.Column="3" />
                        <TextBlock Text="路径"
                                   x:Uid="SearchPath"
                                   Margin="-5,0,0,0"
                                   FontSize="14"
                                   TextTrimming="CharacterEllipsis"
                                   Grid.Column="4" />
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch"></Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:FileSystemStorageItem">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="1.5*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Image VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Stretch="Uniform"
                               Source="{x:Bind Thumbnail,Mode=OneWay}"
                               Margin="0,0,5,0"
                               Height="30"
                               Width="30" />
                        <TextBlock Margin="35,0,10,0"
                                   VerticalAlignment="Center"
                                   FontSize="15"
                                   Text="{x:Bind DisplayName,Mode=OneWay}"
                                   ToolTipService.ToolTip="{x:Bind DisplayName,Mode=OneWay}"
                                   TextTrimming="CharacterEllipsis" />
                        <TextBlock VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   FontSize="15"
                                   Text="{x:Bind ModifiedTime,Mode=OneWay}"
                                   ToolTipService.ToolTip="{x:Bind ModifiedTime,Mode=OneWay}"
                                   Grid.Column="1"
                                   TextTrimming="CharacterEllipsis" />
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="15"
                                   Margin="0,0,10,0"
                                   Text="{x:Bind DisplayType}"
                                   ToolTipService.ToolTip="{x:Bind DisplayType}"
                                   Grid.Column="2"
                                   TextTrimming="CharacterEllipsis" />
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="15"
                                   Margin="0,0,10,0"
                                   Text="{x:Bind Size,Mode=OneWay}"
                                   TextTrimming="CharacterEllipsis"
                                   Visibility="{x:Bind StorageType,Converter={StaticResource StateConverter}}"
                                   Grid.Column="3" />
                        <TextBlock VerticalAlignment="Center"
                                   FontSize="15"
                                   Text="{x:Bind Path}"
                                   ToolTipService.ToolTip="{x:Bind Path}"
                                   TextTrimming="CharacterEllipsis"
                                   Grid.Column="4" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ContextFlyout>
                <CommandBarFlyout x:Name="SearchCommandFlyout"
                                  Placement="RightEdgeAlignedTop">
                    <CommandBarFlyout.SecondaryCommands>
                        <AppBarButton Icon="Remote"
                                      x:Uid="SearchLocation"
                                      x:Name="Location"
                                      Label="打开所在位置"
                                      Click="Location_Click" />
                        <AppBarButton Icon="Copy"
                                      x:Name="CopyPath"
                                      Label="复制完整路径"
                                      IsEnabled="{x:Bind Location.IsEnabled,Mode=OneWay}"
                                      x:Uid="SearchCopyPath"
                                      Click="CopyPath_Click"/>
                        <AppBarButton Icon="Tag"
                                      x:Uid="SearchProperties"
                                      Label="属性"
                                      IsEnabled="{x:Bind Location.IsEnabled,Mode=OneWay}"
                                      Click="Attribute_Click" />
                    </CommandBarFlyout.SecondaryCommands>
                </CommandBarFlyout>
            </ListView.ContextFlyout>
        </ListView>
        <TextBlock Name="HasItem"
                   x:FieldModifier="public"
                   Visibility="Collapsed"
                   x:Uid="SearchHasItem"
                   Text="无法搜索到任何文件"
                   Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="22" />

        <controls:Loading x:Name="LoadingControl"
                          IsLoading="False"
                          Grid.RowSpan="2">
            <controls:Loading.Background>
                <SolidColorBrush Color="Black"
                                 Opacity="0.65" />
            </controls:Loading.Background>
            <StackPanel>
                <TextBlock FontSize="22"
                           x:Uid="SearchingText"
                           Text="正在搜索..."
                           VerticalAlignment="Center"
                           TextAlignment="Center" />
                <controls1:ProgressBar IsIndeterminate="True"
                                       Width="180"
                                       Margin="0,10,0,0" />
            </StackPanel>
        </controls:Loading>
    </Grid>
</Page>
