<UserControl  xmlns:Cls="using:RX_Explorer.Class"
              x:Class="RX_Explorer.SettingPage"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
              xmlns:control="using:Microsoft.Toolkit.Uwp.UI.Controls"
              xmlns:sys="using:System"
              xmlns:Brush="using:Microsoft.Toolkit.Uwp.UI.Media"
              xmlns:Windows11NotPresent="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract,11)"
              xmlns:Triggers="using:Microsoft.Toolkit.Uwp.UI.Triggers"
              mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <StaticResource x:Key="NavigationViewContentBackground"
                                    ResourceKey="SystemAltMediumLowColor" />
                    <StaticResource x:Key="ExpanderHeaderBackground"
                                    ResourceKey="SystemControlAcrylicElementMediumHighBrush" />

                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <StaticResource x:Key="NavigationViewContentBackground"
                                    ResourceKey="SystemAltLowColor" />
                    <StaticResource x:Key="ExpanderHeaderBackground"
                                    ResourceKey="SystemControlAcrylicElementMediumHighBrush" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <Thickness x:Key="NavigationViewPaneContentGridMargin">5,10</Thickness>
            <Thickness x:Key="ExpanderHeaderBorderThickness">0</Thickness>

            <Cls:ThemeToIndexConverter x:Key="ThemeConverter" />
            <Cls:InverseConverter x:Key="InverseConverter" />

            <muxc:TeachingTip Title="仅通过索引执行搜索"
                              IsLightDismissEnabled="True"
                              x:Uid="IndexerQuestion"
                              Target="{x:Bind IndexerQuestion}"
                              x:Name="UseIndexerTip"
                              Subtitle="仅搜索所有已被索引的文件，若当前位置已被Windows索引，则使用该选项将能够大幅提升搜索速度。注意: 请勿在未使用索引或索引器已被禁用的情况下使用此选项，否则将导致搜索结果不正确" />

            <muxc:CommandBarFlyout Placement="RightEdgeAlignedTop"
                                   x:Name="PictureFlyout">
                <muxc:CommandBarFlyout.SecondaryCommands>
                    <AppBarButton Icon="Delete"
                                  Label="删除"
                                  MinWidth="200"
                                  x:Name="DeletePictureButton"
                                  Click="DeletePictureButton_Click" />
                </muxc:CommandBarFlyout.SecondaryCommands>
            </muxc:CommandBarFlyout>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="RootGrid"
          Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">

        <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <muxc:NavigationView Name="SettingNavigation"
                                 PaneDisplayMode="Left"
                                 IsPaneOpen="True"
                                 OpenPaneLength="200"
                                 IsBackButtonVisible="Collapsed"
                                 IsPaneToggleButtonVisible="False"
                                 IsSettingsVisible="False"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Width="850"
                                 Height="550"
                                 Background="{ThemeResource DialogAcrylicBrush}"
                                 ItemInvoked="SettingNavigation_ItemInvoked">
                <muxc:NavigationView.MenuItems>
                    <muxc:NavigationViewItem IsSelected="True">
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xE3BC;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="基本"
                                       x:Uid="SettingBasicText"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEBD2;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="高级"
                                       x:Uid="SettingAdvance"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xE2B1;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="个性化"
                                       x:Uid="SettingPersonalize"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xEA18;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="隐私"
                                       x:Uid="SettingPrivacy"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xE930;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="版本"
                                       x:Uid="SettingVersion"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xE823;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="恢复"
                                       x:Uid="SettingRecovery"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xF0B9;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="其他"
                                       x:Uid="SettingOther"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                    <muxc:NavigationViewItem>
                        <muxc:NavigationViewItem.Icon>
                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                      Glyph="&#xE946;" />
                        </muxc:NavigationViewItem.Icon>
                        <muxc:NavigationViewItem.Content>
                            <TextBlock Text="关于"
                                       x:Uid="SettingAbout"
                                       TextTrimming="CharacterEllipsis"
                                       FontSize="16" />
                        </muxc:NavigationViewItem.Content>
                    </muxc:NavigationViewItem>
                </muxc:NavigationView.MenuItems>
                <muxc:NavigationView.Content>
                    <control:SwitchPresenter Name="PresenterSwitcher"
                                             ContentTransitions="{x:Bind Cls:AnimationController.Current.ContentTransitions,Mode=OneWay}">
                        <control:Case Value="0"
                                      IsDefault="True">
                            <ScrollViewer Padding="20"
                                          VerticalScrollBarVisibility="Hidden">
                                <StackPanel ChildrenTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}">
                                    <TextBlock Text="基本"
                                               x:Uid="SettingBasicText"
                                               FontSize="18" />
                                    <Border Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,10,0,0"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="文件夹目录"
                                                       x:Uid="SettingTreeViewDetachLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="TreeViewDetach" />
                                            <ToggleSwitch OnContent="启用"
                                                          OffContent="隐藏"
                                                          x:Uid="SettingTreeViewDetach"
                                                          Style="{StaticResource SettingToggleSwitchStyle}"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          x:Name="TreeViewDetach" />
                                        </RelativePanel>
                                    </Border>

                                    <Border Margin="0,5,0,0"
                                            Padding="20,10"
                                            MinHeight="60"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="导航视图布局"
                                                       x:Uid="SettingNavLayoutLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="NavigationViewLayout" />
                                            <ToggleSwitch OnContent="左侧"
                                                          OffContent="顶端"
                                                          Style="{StaticResource SettingToggleSwitchStyle}"
                                                          x:Uid="SettingNavLayout"
                                                          Name="NavigationViewLayout"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          Toggled="NavigationViewLayout_Toggled" />
                                        </RelativePanel>
                                    </Border>

                                    <Border Margin="0,5,0,0"
                                            Padding="20,10"
                                            MinHeight="60"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="标签页预览"
                                                       x:Uid="SettingTabPreviewLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="TabPreviewSwitch" />
                                            <ToggleSwitch OnContent="启用"
                                                          OffContent="禁用"
                                                          Style="{StaticResource SettingToggleSwitchStyle}"
                                                          x:Uid="SettingTabPreview"
                                                          Name="TabPreviewSwitch"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          Toggled="TabPreviewSwitch_Toggled" />
                                        </RelativePanel>
                                    </Border>

                                    <muxc:Expander Margin="0,5,0,0"
                                                   ExpandDirection="Down"
                                                   HorizontalAlignment="Stretch"
                                                   HorizontalContentAlignment="Stretch"
                                                   VerticalContentAlignment="Stretch"
                                                   Padding="0"
                                                   MinHeight="60"
                                                   Background="Transparent"
                                                   CornerRadius="4,4,0,0">
                                        <muxc:Expander.Header>
                                            <RelativePanel Padding="4,10,0,10">
                                                <TextBlock Text="显示隐藏文件"
                                                           x:Uid="SettingDisplayHiddenItemLabel"
                                                           RelativePanel.AlignVerticalCenterWithPanel="True"
                                                           RelativePanel.AlignLeftWithPanel="True"
                                                           RelativePanel.LeftOf="DisplayHiddenItem" />
                                                <ToggleSwitch OnContent="启用"
                                                              OffContent="禁用"
                                                              Style="{StaticResource SettingToggleSwitchStyle}"
                                                              x:Uid="SettingDisplayHiddenItem"
                                                              Name="DisplayHiddenItem"
                                                              RelativePanel.AlignRightWithPanel="True"
                                                              RelativePanel.AlignVerticalCenterWithPanel="True" />
                                            </RelativePanel>
                                        </muxc:Expander.Header>
                                        <muxc:Expander.Content>
                                            <Border Margin="0,1,0,0"
                                                    Padding="40,10,10,10"
                                                    MinHeight="45"
                                                    CornerRadius="0,0,4,4"
                                                    Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                <CheckBox Content="隐藏受保护的系统文件(推荐)"
                                                          Padding="8,0"
                                                          IsEnabled="{x:Bind DisplayHiddenItem.IsOn,Mode=OneWay}"
                                                          VerticalContentAlignment="Center"
                                                          x:Uid="SettingHideProtectedSystemItems"
                                                          Name="HideProtectedSystemItems" />
                                            </Border>
                                        </muxc:Expander.Content>
                                    </muxc:Expander>

                                    <Border Margin="0,5,0,0"
                                            Padding="20,10"
                                            MinHeight="60"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="文件夹打开方式"
                                                       x:Uid="SettingFolderOpenMethodLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="FolderOpenMethod" />
                                            <ComboBox x:Uid="SettingFolderOpenMethod"
                                                      MinWidth="120"
                                                      Name="FolderOpenMethod"
                                                      Background="{ThemeResource ComboBoxDisabledBackgroundThemeBrush}"
                                                      RelativePanel.AlignRightWithPanel="True"
                                                      RelativePanel.AlignVerticalCenterWithPanel="True"
                                                      SelectionChanged="FolderOpenMethod_SelectionChanged" />

                                        </RelativePanel>
                                    </Border>

                                    <Border Margin="0,5,0,0"
                                            Padding="20,10"
                                            MinHeight="60"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="语言"
                                                       x:Uid="LanguageComboBoxLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="LanguageComboBox" />
                                            <ComboBox MinWidth="180"
                                                      Name="LanguageComboBox"
                                                      x:Uid="LanguageComboBox"
                                                      RelativePanel.AlignRightWithPanel="True"
                                                      RelativePanel.AlignVerticalCenterWithPanel="True"
                                                      Background="{ThemeResource ComboBoxDisabledBackgroundThemeBrush}">
                                                <x:String>中文(简体)</x:String>
                                                <x:String>English (United States)</x:String>
                                                <x:String>Français</x:String>
                                                <x:String>中文(繁體)</x:String>
                                                <x:String>Español</x:String>
                                                <x:String>Deutsche</x:String>
                                            </ComboBox>
                                        </RelativePanel>
                                    </Border>

                                    <Border Margin="0,5,0,0"
                                            Padding="20,10"
                                            MinHeight="60"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="字体"
                                                       x:Uid="FontFamilyComboBoxLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="FontFamilyComboBox" />
                                            <ComboBox Width="220"
                                                      x:Uid="FontFamilyComboBox"
                                                      Name="FontFamilyComboBox"
                                                      RelativePanel.AlignRightWithPanel="True"
                                                      RelativePanel.AlignVerticalCenterWithPanel="True"
                                                      ItemsSource="{x:Bind Cls:FontFamilyController.GetInstalledFontFamily()}"
                                                      Background="{ThemeResource ComboBoxDisabledBackgroundThemeBrush}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate x:DataType="Cls:InstalledFonts">
                                                        <Grid>
                                                            <TextBlock Text="{x:Bind Name}"
                                                                       FontFamily="{x:Bind Name}"
                                                                       ToolTipService.ToolTip="{x:Bind Name}"
                                                                       TextTrimming="CharacterEllipsis"
                                                                       VerticalAlignment="Center" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </RelativePanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </control:Case>
                        <control:Case Value="1">
                            <ScrollViewer Padding="20"
                                          VerticalScrollBarVisibility="Hidden">
                                <StackPanel ChildrenTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}">
                                    <TextBlock Text="高级"
                                               x:Uid="SettingAdvance"
                                               FontSize="18" />
                                    <Border Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,10,0,0"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="随系统自动启动"
                                                       x:Uid="AutoBootOnStartupLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="AutoBoot" />
                                            <ToggleSwitch OnContent="启用"
                                                          OffContent="禁用"
                                                          Name="AutoBoot"
                                                          x:Uid="AutoBootOnStartup"
                                                          Style="{StaticResource SettingToggleSwitchStyle}"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True" />
                                        </RelativePanel>
                                    </Border>

                                    <Border Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,5,0,0"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="EnableQuicklook"
                                                        Margin="0,0,20,0">
                                                <TextBlock Text="QuickLook预览"
                                                           x:Uid="QuicklookHeader" />
                                                <TextBlock x:Uid="QuicklookTipContent"
                                                           FontSize="12"
                                                           TextWrapping="WrapWholeWords"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="Gray"
                                                           Text="QuickLook是一种方便快捷查看文件内容的辅助软件。若要启用此功能，则您必须提前安装QuickLook并确保QuickLook正常运行。您可以在RX文件管理器中点击任意文件并按下空格键来激活QuickLook" />
                                            </StackPanel>
                                            <ToggleSwitch x:Uid="EnableQuicklook"
                                                          Name="EnableQuicklook"
                                                          OnContent="启用"
                                                          OffContent="禁用"
                                                          Toggled="EnableQuicklook_Toggled"
                                                          Style="{StaticResource SettingToggleSwitchStyle}"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True" />
                                        </RelativePanel>
                                    </Border>

                                    <Border Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,5,0,0"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="悬浮于其他应用之上"
                                                       x:Uid="AlwaysOnTopLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="AlwaysOnTop" />
                                            <ToggleSwitch OnContent="启用"
                                                          OffContent="禁用"
                                                          Name="AlwaysOnTop"
                                                          x:Uid="AlwaysOnTop"
                                                          Style="{StaticResource SettingToggleSwitchStyle}"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True" />
                                        </RelativePanel>
                                    </Border>

                                    <Border Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,5,0,0"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="扩展右键菜单"
                                                       x:Uid="SettingPageContextMenuExtLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="ContextMenuExtSwitch" />
                                            <ToggleSwitch OnContent="启用"
                                                          OffContent="禁用"
                                                          x:Uid="SettingPageContextMenuExt"
                                                          Name="ContextMenuExtSwitch"
                                                          Style="{StaticResource SettingToggleSwitchStyle}"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          Toggled="ContextMenuExtSwitch_Toggled" />
                                        </RelativePanel>
                                    </Border>

                                    <muxc:Expander Margin="0,5,0,0"
                                                   ExpandDirection="Down"
                                                   HorizontalAlignment="Stretch"
                                                   HorizontalContentAlignment="Stretch"
                                                   VerticalContentAlignment="Top"
                                                   Padding="0"
                                                   MinHeight="60"
                                                   Background="Transparent"
                                                   CornerRadius="4,4,0,0">
                                        <muxc:Expander.Header>
                                            <RelativePanel Padding="4,10,0,10">
                                                <TextBlock Text="使用[Win+E]激活此应用"
                                                           x:Uid="UseWinAndEActivateLabel"
                                                           RelativePanel.AlignVerticalCenterWithPanel="True"
                                                           RelativePanel.AlignLeftWithPanel="True"
                                                           RelativePanel.LeftOf="UseWinAndEActivate"
                                                           Margin="0,0,20,0" />
                                                <ToggleSwitch Name="UseWinAndEActivate"
                                                              OnContent="启用"
                                                              OffContent="禁用"
                                                              x:Uid="UseWinAndEActivate"
                                                              Style="{StaticResource SettingToggleSwitchStyle}"
                                                              RelativePanel.AlignRightWithPanel="True"
                                                              RelativePanel.AlignVerticalCenterWithPanel="True" />
                                            </RelativePanel>
                                        </muxc:Expander.Header>
                                        <muxc:Expander.Content>
                                            <StackPanel>
                                                <Border Margin="0,1,0,0"
                                                        Padding="40,10,10,10"
                                                        MinHeight="45"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <CheckBox Content="激活时始终启动新的进程"
                                                              Padding="8,0"
                                                              IsEnabled="{x:Bind UseWinAndEActivate.IsOn,Mode=OneWay}"
                                                              VerticalContentAlignment="Center"
                                                              x:Uid="SettingPageAlwaysLaunchNew"
                                                              Name="AlwaysLaunchNew"
                                                              Checked="AlwaysLaunchNew_Checked"
                                                              Unchecked="AlwaysLaunchNew_Unchecked" />
                                                </Border>
                                                <Button Padding="40,10,10,10"
                                                        MinHeight="45"
                                                        Margin="0,1,0,0"
                                                        BorderThickness="0"
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Stretch"
                                                        CornerRadius="0"
                                                        Name="WinEManualGuidence"
                                                        Click="WinEManualGuidence_Click"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <RelativePanel>
                                                        <TextBlock Text="有关自行重定向Win+E的教程"
                                                                   TextWrapping="WrapWholeWords"
                                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                                   RelativePanel.AlignLeftWithPanel="True"
                                                                   RelativePanel.LeftOf="SettingPageWinEQuestionAction1" />
                                                        <Viewbox Name="SettingPageWinEQuestionAction1"
                                                                 Height="20"
                                                                 Width="20"
                                                                 RelativePanel.AlignRightWithPanel="True"
                                                                 RelativePanel.AlignVerticalCenterWithPanel="True">
                                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                      Glyph="&#xE71B;" />
                                                        </Viewbox>
                                                    </RelativePanel>
                                                </Button>
                                                <Button Padding="40,10,10,10"
                                                        MinHeight="45"
                                                        Margin="0,1,0,0"
                                                        BorderThickness="0"
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Stretch"
                                                        CornerRadius="0,0,4,4"
                                                        Name="WinEExportRestoreFile"
                                                        Click="WinEExportRestoreFile_Click"
                                                        Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                                    <RelativePanel>
                                                        <TextBlock Text="导出用于自行关闭Win+E重定向的文件"
                                                                   TextWrapping="WrapWholeWords"
                                                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                                                   RelativePanel.AlignLeftWithPanel="True"
                                                                   RelativePanel.LeftOf="SettingPageWinEQuestionAction2" />
                                                        <Viewbox Name="SettingPageWinEQuestionAction2"
                                                                 Height="20"
                                                                 Width="20"
                                                                 RelativePanel.AlignRightWithPanel="True"
                                                                 RelativePanel.AlignVerticalCenterWithPanel="True">
                                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                                      Glyph="&#xE792;" />
                                                        </Viewbox>
                                                    </RelativePanel>
                                                </Button>
                                            </StackPanel>
                                        </muxc:Expander.Content>
                                    </muxc:Expander>

                                    <muxc:Expander Margin="0,5,0,0"
                                                   ExpandDirection="Down"
                                                   HorizontalAlignment="Stretch"
                                                   HorizontalContentAlignment="Stretch"
                                                   VerticalContentAlignment="Top"
                                                   Padding="0"
                                                   MinHeight="60"
                                                   Background="Transparent"
                                                   CornerRadius="4,4,0,0">
                                        <muxc:Expander.Header>
                                            <RelativePanel Padding="4,10,0,10">
                                                <TextBlock Text="弹出删除确认提示框"
                                                           x:Uid="DeleteConfirmSwitchLabel"
                                                           RelativePanel.AlignVerticalCenterWithPanel="True"
                                                           RelativePanel.AlignLeftWithPanel="True"
                                                           RelativePanel.LeftOf="DeleteConfirmSwitch"
                                                           Margin="0,0,20,0" />
                                                <ToggleSwitch OnContent="启用"
                                                              OffContent="禁用"
                                                              Name="DeleteConfirmSwitch"
                                                              x:Uid="DeleteConfirmSwitch"
