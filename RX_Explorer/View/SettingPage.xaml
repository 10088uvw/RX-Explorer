                                                                            HorizontalAlignment="Stretch"
                                                                            Name="DeleteSpecificTabButton"
                                                                            Click="DeleteSpecificTabButton_Click" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ListView.ItemTemplate>
                                                    </ListView>
                                                </Border>
                                            </StackPanel>
                                        </muxc:Expander.Content>
                                    </muxc:Expander>
                                </StackPanel>
                            </ScrollViewer>
                        </control:Case>
                        <control:Case Value="3">
                            <ScrollViewer Padding="20"
                                          VerticalScrollBarVisibility="Hidden">
                                <StackPanel ChildrenTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}">
                                    <TextBlock Text="隐私"
                                               x:Uid="SettingPrivacy"
                                               FontSize="18" />
                                    <Button Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,10,0,0"
                                            BorderThickness="0"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Name="NavigatePrivacyLink"
                                            Click="NavigatePrivacyLink_Click"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="隐私策略"
                                                       TextWrapping="WrapWholeWords"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="PrivacyLinkIcon" />
                                            <Viewbox Name="PrivacyLinkIcon"
                                                     Height="20"
                                                     Width="20"
                                                     RelativePanel.AlignRightWithPanel="True"
                                                     RelativePanel.AlignVerticalCenterWithPanel="True">
                                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                          Glyph="&#xE71B;" />
                                            </Viewbox>
                                        </RelativePanel>
                                    </Button>

                                    <Border Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,5,0,0"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="路径历史记录"
                                                       x:Uid="SettingPathHistoryLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="PathHistory" />
                                            <ToggleSwitch OnContent="保存"
                                                          OffContent="清除"
                                                          Name="PathHistory"
                                                          x:Uid="SettingPathHistory"
                                                          Style="{StaticResource SettingToggleSwitchStyle}"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          Toggled="PathHistory_Toggled" />
                                        </RelativePanel>
                                    </Border>

                                    <Border Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,5,0,0"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <TextBlock Text="搜索历史记录"
                                                       x:Uid="SettingSearchHistoryLabel"
                                                       RelativePanel.AlignVerticalCenterWithPanel="True"
                                                       RelativePanel.AlignLeftWithPanel="True"
                                                       RelativePanel.LeftOf="SearchHistory" />
                                            <ToggleSwitch OnContent="保存"
                                                          OffContent="清除"
                                                          x:Uid="SettingSearchHistory"
                                                          Name="SearchHistory"
                                                          Style="{StaticResource SettingToggleSwitchStyle}"
                                                          RelativePanel.AlignRightWithPanel="True"
                                                          RelativePanel.AlignVerticalCenterWithPanel="True"
                                                          Toggled="SearchHistory_Toggled" />
                                        </RelativePanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </control:Case>
                        <control:Case Value="4">
                            <ScrollViewer Padding="20"
                                          VerticalScrollBarVisibility="Hidden">
                                <StackPanel ChildrenTransitions="{x:Bind Cls:AnimationController.Current.RepositionTransitions,Mode=OneWay}">
                                    <TextBlock Text="版本"
                                               x:Uid="SettingVersion"
                                               FontSize="18" />
                                    <Button Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,10,0,0"
                                            BorderThickness="0"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Click="Update_Click"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="VersionTipIcon">
                                                <TextBlock Text="{x:Bind Version}"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextWrapping="WrapWholeWords"/>
                                                <TextBlock Foreground="Gray"
                                                           FontSize="12"
                                                           x:Uid="UpdateLatest"
                                                           Text="已经是最新版本"
                                                           Name="VersionTip"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextWrapping="WrapWholeWords"/>
                                            </StackPanel>
                                            <Viewbox Name="VersionTipIcon"
                                                     Height="20"
                                                     Width="20"
                                                     RelativePanel.AlignRightWithPanel="True"
                                                     RelativePanel.AlignVerticalCenterWithPanel="True">
                                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                          Glyph="&#xE930;" />
                                            </Viewbox>
                                        </RelativePanel>
                                    </Button>

                                    <Button Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,5,0,0"
                                            BorderThickness="0"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Click="NavigateGithub_Click"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="GoGithubTipIcon">
                                                <TextBlock Text="前往Github"
                                                           x:Uid="SettingGoGithubTitle"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextWrapping="WrapWholeWords" />
                                                <TextBlock Foreground="Gray"
                                                           FontSize="12"
                                                           x:Uid="SettingGoGithubContent"
                                                           Text="贡献代码来帮助改进本应用"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextWrapping="WrapWholeWords" />
                                            </StackPanel>
                                            <Viewbox Name="GoGithubTipIcon"
                                                     Height="20"
                                                     Width="20"
                                                     RelativePanel.AlignRightWithPanel="True"
                                                     RelativePanel.AlignVerticalCenterWithPanel="True">
                                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                          Glyph="&#xEDE4;" />
                                            </Viewbox>
                                        </RelativePanel>
                                    </Button>

                                    <Button Padding="20,10"
                                            MinHeight="60"
                                            Margin="0,5,0,0"
                                            BorderThickness="0"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Click="ShowUpdateLog_Click"
                                            Background="{ThemeResource SystemControlAcrylicElementMediumHighBrush}">
                                        <RelativePanel>
                                            <StackPanel RelativePanel.AlignVerticalCenterWithPanel="True"
                                                        RelativePanel.AlignLeftWithPanel="True"
                                                        RelativePanel.LeftOf="ShowUpdateLogTipIcon">
                                                <TextBlock Text="更新历史"
                                                           x:Uid="SettingUpdateLogTitle"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextWrapping="WrapWholeWords" />
                                                <TextBlock Foreground="Gray"
                                                           FontSize="12"
                                                           x:Uid="SettingUpdateLogContent"
                                                           Text="查看最近更新内容和以前的更新记录"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextWrapping="WrapWholeWords" />
                                            </StackPanel>
                                            <Viewbox Name="ShowUpdateLogTipIcon"
                                                     Height="20"
                                                     Width="20"
                                                     RelativePanel.AlignRightWithPanel="True"
                                                     RelativePanel.AlignVerticalCenterWithPanel="True">
                                                <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                          Glyph="&#xF000;" />
                                            </Viewbox>
                                        </RelativePanel>
                                    </Button>
                                </StackPanel>
                            </ScrollViewer>
                        </control:Case>
                        <control:Case Value="5">
                            <StackPanel Margin="0,20,0,0"
                                        HorizontalAlignment="Left">
                                <Button Background="{ThemeResource SystemControlTransparentRevealBackgroundBrush}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        BorderThickness="0"
                                        Click="ClearUp_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="30"
                                                 Width="30"
                                                 VerticalAlignment="Center">
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Foreground="{ThemeResource SystemAccentColor}"
                                                      Glyph="&#xE7BA;" />
                                        </Viewbox>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="初始化应用程序"
                                                       x:Uid="SettingInitAppTitle" />
                                            <TextBlock Foreground="Gray"
                                                       FontSize="12"
                                                       x:Uid="SettingInitAppContent"
                                                       Text="删除所有数据并恢复成初始状态" />
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                <Button Background="{ThemeResource SystemControlTransparentRevealBackgroundBrush}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        BorderThickness="0"
                                        Name="ConfigManagerButton">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="30"
                                                 Width="30"
                                                 VerticalAlignment="Center">
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Foreground="{ThemeResource SystemAccentColor}"
                                                      Glyph="&#xE148;" />
                                        </Viewbox>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="管理配置文件"
                                                       x:Uid="SettingManageConfigTitle" />
                                            <TextBlock Foreground="Gray"
                                                       FontSize="12"
                                                       x:Uid="SettingManageConfigContent"
                                                       Text="执行保存或恢复配置操作" />
                                        </StackPanel>
                                    </StackPanel>
                                    <Button.Flyout>
                                        <Flyout Placement="Bottom">
                                            <Flyout.FlyoutPresenterStyle>
                                                <Style TargetType="FlyoutPresenter">
                                                    <Setter Property="CornerRadius"
                                                            Value="{StaticResource CustomCornerRadius}" />
                                                    <Setter Property="Background"
                                                            Value="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}" />
                                                </Style>
                                            </Flyout.FlyoutPresenterStyle>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Button Content="导出"
                                                        x:Uid="SettingConfiguration_Export"
                                                        Name="ExportConfiguration"
                                                        HorizontalAlignment="Stretch"
                                                        Margin="0,0,5,0"
                                                        MinWidth="80"
                                                        Click="ExportConfiguration_Click" />
                                                <Button Content="导入"
                                                        Name="ImportConfiguration"
                                                        HorizontalAlignment="Stretch"
                                                        Margin="5,0,0,0"
                                                        x:Uid="SettingConfiguration_Import"
                                                        MinWidth="80"
                                                        Grid.Column="1"
                                                        Click="ImportConfiguration_Click" />
                                            </Grid>
                                        </Flyout>
                                    </Button.Flyout>
                                </Button>
                            </StackPanel>
                        </control:Case>
                        <control:Case Value="6">
                            <StackPanel Margin="0,20,0,0"
                                        HorizontalAlignment="Left">
                                <Button Background="{ThemeResource SystemControlTransparentRevealBackgroundBrush}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        Name="PurchaseApp"
                                        BorderThickness="0"
                                        Click="PurchaseApp_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="30"
                                                 Width="30"
                                                 VerticalAlignment="Center">
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Foreground="{ThemeResource SystemAccentColor}"
                                                      Glyph="&#xE14D;" />
                                        </Viewbox>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="购买本应用"
                                                       x:Uid="SettingPurchaseAppTitle" />
                                            <TextBlock Foreground="Gray"
                                                       FontSize="12"
                                                       x:Uid="SettingPurchaseAppContent"
                                                       Text="购买此应用以解锁全部功能并支持开发" />
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                <Button Background="{ThemeResource SystemControlTransparentRevealBackgroundBrush}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        BorderThickness="0"
                                        Click="ReviewButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="30"
                                                 Width="30"
                                                 VerticalAlignment="Center">
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Foreground="{ThemeResource SystemAccentColor}"
                                                      Glyph="&#xE134;" />
                                        </Viewbox>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="编写评价"
                                                       x:Uid="SettingReviewAppTitle" />
                                            <TextBlock Foreground="Gray"
                                                       FontSize="12"
                                                       x:Uid="SettingReviewAppContent"
                                                       Text="在微软应用商店中留下您对本应用的评价吧" />
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                <Button Background="{ThemeResource SystemControlTransparentRevealBackgroundBrush}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        BorderThickness="0"
                                        Click="SystemInfoButton_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="30"
                                                 Width="30"
                                                 VerticalAlignment="Center">
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Foreground="{ThemeResource SystemAccentColor}"
                                                      Glyph="&#xE946;" />
                                        </Viewbox>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="系统信息"
                                                       x:Uid="SettingSystemInfoTitle" />
                                            <TextBlock Foreground="Gray"
                                                       FontSize="12"
                                                       x:Uid="SettingSystemInfoContent"
                                                       Text="查看软硬件系统信息" />
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                <Button Background="{ThemeResource SystemControlTransparentRevealBackgroundBrush}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        BorderThickness="0"
                                        Click="ExportLog_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="30"
                                                 Width="30"
                                                 VerticalAlignment="Center">
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Foreground="{ThemeResource SystemAccentColor}"
                                                      Glyph="&#xE9F9;" />
                                        </Viewbox>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="日志文件"
                                                       x:Uid="SettingLogTitle" />
                                            <TextBlock Foreground="Gray"
                                                       FontSize="12"
                                                       x:Uid="SettingLogContent"
                                                       Text="导出错误日志文件以供开发者分析相关问题" />
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                <Button Background="{ThemeResource SystemControlTransparentRevealBackgroundBrush}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        BorderThickness="0"
                                        Click="ShortcutGuide_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="30"
                                                 Width="30"
                                                 VerticalAlignment="Center">
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Foreground="{ThemeResource SystemAccentColor}"
                                                      Glyph="&#xE816;" />
                                        </Viewbox>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="键盘快捷键指南"
                                                       x:Uid="SettingKeyboardGuideTitle" />
                                            <TextBlock Foreground="Gray"
                                                       FontSize="12"
                                                       x:Uid="SettingKeyboardGuideContent"
                                                       Text="包含所有受本应用支持的键盘快捷键说明" />
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                <Button Background="{ThemeResource SystemControlTransparentRevealBackgroundBrush}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        BorderThickness="0"
                                        Click="AQSGuide_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="30"
                                                 Width="30"
                                                 VerticalAlignment="Center">
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Foreground="{ThemeResource SystemAccentColor}"
                                                      Glyph="&#xE816;" />
                                        </Viewbox>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="高级查询语法(AQS)指南"
                                                       x:Uid="SettingAQSGuideTitle" />
                                            <TextBlock Foreground="Gray"
                                                       FontSize="12"
                                                       x:Uid="SettingAQSGuideContent"
                                                       Text="Advanced Query Syntax 使用方法和结构说明" />
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                                <Button Background="{ThemeResource SystemControlTransparentRevealBackgroundBrush}"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        BorderThickness="0"
                                        Name="CopyQQ"
                                        x:Load="False"
                                        Visibility="Collapsed"
                                        Click="CopyQQ_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <Viewbox Height="30"
                                                 Width="30"
                                                 VerticalAlignment="Center">
                                            <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                                      Foreground="{ThemeResource SystemAccentColor}"
                                                      Glyph="&#xE136;" />
                                        </Viewbox>
                                        <StackPanel Margin="10,0,0,0">
                                            <TextBlock Text="QQ交流群" />
                                            <TextBlock Foreground="Gray"
                                                       FontSize="12"
                                                       Text="点击复制: 937294538" />
                                        </StackPanel>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </control:Case>
                        <control:Case Value="7">
                            <StackPanel>
                                <TextBlock FontSize="15"
                                           Text="特别感谢以下提供翻译的人员:"
                                           Margin="0,10,0,0"
                                           x:Uid="ThankTranslate"
                                           Name="ThankTranslate" />
                                <TextBlock Text="• Yann Lacroix (French)"
                                           Margin="5,5,0,0" />
                                <TextBlock Text="• 秋夜AuNight (Chinese (Traditional))"
                                           Margin="5,5,0,0" />
                                <TextBlock Text="• Manuel Armenteros del Olmo (Spanish)"
                                           Margin="5,5,0,0" />
                                <TextBlock Text="• Jonas Gunkel (German)"
                                           Margin="5,5,0,0" />
                            </StackPanel>
                        </control:Case>
                    </control:SwitchPresenter>
                </muxc:NavigationView.Content>
            </muxc:NavigationView>

            <Grid Grid.Row="1"
                  Padding="20,0"
                  Background="{ThemeResource SystemControlAcrylicElementBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        MinWidth="120"
                        Grid.Column="1"
                        Content="确认" 
                        Name="CloseButton"
                        Click="CloseButton_Click"/>
            </Grid>

            <control:Loading x:Name="LoadingControl"
                             Grid.RowSpan="2"
                             IsLoading="False">
                <control:Loading.Background>
                    <Brush:AcrylicBrush TintColor="{ThemeResource SystemAltHighColor}"
                                        TintOpacity="0.6"
                                        BlurAmount="3" />
                </control:Loading.Background>
                <StackPanel Padding="12"
                            Width="230">
                    <TextBlock Name="LoadingText"
                               FontSize="16"
                               TextAlignment="Center" />
                    <muxc:ProgressBar IsIndeterminate="True"
                                      Margin="0,10,0,0" />
                </StackPanel>
            </control:Loading>
        </Grid>
    </Grid>
</UserControl>
